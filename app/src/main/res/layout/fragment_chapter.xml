<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6EE9C">

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="410dp"
            android:layout_height="43dp"
            android:background="#C864F353"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="345dp"
            android:layout_height="566dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/menu_curve_transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDesc"
            app:layout_constraintVertical_bias="1.0">

            <Button
                android:id="@+id/btnAudio"
                android:layout_width="189dp"
                android:layout_height="82dp"
                android:layout_marginTop="68dp"
                android:background="@drawable/button_addnew"
                android:text="Audio"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnNotes" />

            <Button
                android:id="@+id/btnNotes"
                android:layout_width="189dp"
                android:layout_height="82dp"
                android:layout_marginTop="68dp"
                android:background="@drawable/button_note"
                android:text="Notes"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnRevision"
                android:layout_width="189dp"
                android:layout_height="82dp"
                android:layout_marginTop="68dp"
                android:text="Revision"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:background="@drawable/grad_login_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAudio" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
